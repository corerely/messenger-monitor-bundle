{% extends "@CorerelyMessengerMonitor/base.html.twig" %}

{% block content %}
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-5">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Transport name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Messegaes count
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for name, messagesCount in receiversInfo %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ name }}
                    </th>
                    <td class="px-6 py-4">
                        {{ messagesCount }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <h6 class="text-lg font-bold dark:text-white mt-4">Failed messages</h6>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        ID
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Class
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Failed at
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Error
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for message in failedMessages %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ message.id }}
                    </th>
                    <td class="px-6 py-4">
                        {{ message.class }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ message.failedAt is empty ? '' : message.failedAt|date('Y-m-d H:i:s') }}
                    </td>
                    <td class="px-6 py-4">
                        {{ message.error }}
                    </td>
                    <td class="px-6 py-4">
                        <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Retry</a>
                        <a href="#" class="font-medium text-red-600 dark:text-red-500 hover:underline">Reject</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
