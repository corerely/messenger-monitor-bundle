<h2 id="{{ headingId }}">
    <button
            type="button"
            class="group flex items-center mt-2 font-medium rtl:text-right text-gray-500 gap-3"
            data-accordion-target="#{{ bodyId }}"
            aria-expanded="false"
            aria-controls="{{ bodyId }}"
    >
        <span>Show more</span>
        <svg data-accordion-icon
             class="w-3 h-3 group-aria-expanded:rotate-0 rotate-180 shrink-0"
             aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 10 6">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                  stroke-width="2" d="M9 5 5 1 1 5"/>
        </svg>
    </button>
</h2>
